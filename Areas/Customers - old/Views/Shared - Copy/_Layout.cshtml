<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">


    @if (IsSectionDefined("head"))
    {
        @RenderSection("head");
    }
    else
    {
        @Html.Partial("default_head");
    }

<body>
    <!-- The Navigation Bar -->
        @if (IsSectionDefined("navbar"))
        {
        RenderSection("navbar");
        }
        else
        {
            @Html.Partial("default_navbar");
        }

    @* Modals *@
    @if (IsSectionDefined("modals"))
    {
        RenderSection("modals");
    }
    else
    {
        @Html.Partial("default_modals");
    }


    <!-- Body -->

       @RenderBody()
    
    <!-- Footer -->
    
        @if (IsSectionDefined("footer"))
        {
        @RenderSection("footer", false);
        }
        else
        {
            @Html.Partial("default_footer");
        }
    

    @if (IsSectionDefined("external_scripts"))
    {
        @RenderSection("external_scripts");
    }
    else
    {
        @Html.Partial("default_external_scripts");
    }
    
    @if (IsSectionDefined("required_scripts"))
    {
        @RenderSection("required_script");
    }
    else
    {
        @Html.Partial("required_script");
    }
    

    @if (IsSectionDefined("script"))
    {
        @RenderSection("script");
    }
    else
    {
        @Html.Partial("default_script");
    }
</body>
</html>
