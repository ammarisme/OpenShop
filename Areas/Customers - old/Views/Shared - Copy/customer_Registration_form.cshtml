@model RetailShop.Areas.Customers.Models.RegisterCustomerViewModel

<form action="~/Customers/Customer/Register" id="customer-form" method="POST">

    @*Email*@
    <div id="name-group" class="form-group">
        <label for="name">Email</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    @*Password*@
    <div id="name-group" class="form-group">
        <label for="date">Password</label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
    </div>
    @*ConfirmPassword*@
    <div id="name-group" class="form-group">
        <label for="date">ConfirmPassword</label>
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
    </div>
    <div id="name-group" class="form-group">
        <label for="name">FirstName</label>
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
    </div>
    <div id="name-group" class="form-group">
        <label for="name">LastName</label>
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
    </div>
    <div id="name-group" class="form-group">
        <label for="name">City</label>
        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
    </div>
    <div id="name-group" class="form-group">
        <label for="name">BillingAddress</label>
        @Html.TextBoxFor(m => m.BillingAddress, new { @class = "form-control" })
    </div>
    <div id="name-group" class="form-group">
        <label for="name">PhoneNumber</label>
        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
    </div>
    <input type="submit" class="btn btn-default" value="Register Customer" />
</form>

