@using RetailShop.Areas.Customers.Models
@using RetailShop.Models
@model ManageCustomerViewModel
@{
    ViewBag.Title = "Manage Account";
}

<h5>@ViewBag.Title.</h5>

@* User Creation Form *@
<div class="panel panel-default row sub-content-panel">
    <h5>@Model.FirstName @Model.LastName</h5>
    <div class="panel-body">
            <form action="Edit" id="wholesaler-form" method="POST">
                <fieldset disabled>
                    @Html.TextBoxFor(m => m.Id, new { @class = "form-control hidden" })
                </fieldset>

                <div id="name-group" class="form-group col-md-6">
                    <label for="name">Email</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
                <div id="name-group" class="form-group col-md-6">
                    <label for="name">FirstName</label>
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                </div>
                <div id="name-group" class="form-group col-md-6">
                    <label for="name">LastName</label>
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                </div>
                <div id="name-group" class="form-group col-md-6">
                    <label for="name">City</label>
                </div>            @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                <div id="name-group" class="form-group col-md-6">
                    <label for="name">BillingAddress</label>
                    @Html.TextBoxFor(m => m.BillingAddress, new { @class = "form-control" })
                </div>
                <div id="name-group" class="form-group col-md-6">
                    <label for="name">PhoneNumber</label>
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                </div>
                <br>
                <div id="name-group" class="form-group col-md-6">
                    <input type="submit" class="btn btn-success btn-raised" value="Edit Profile" />
                </div>

            </form>
            <input type="checkbox" id="edit-enable-checkbox">Enable Editing profile</input>
    </div>
</div>
@section script
    {
    <script>
        $("#edit-enable-checkbox").change(function () {
            if ($(this).is(':checked')) {
                $("fieldset").removeAttr("disabled");
            } else {
                $("fieldset").attr("disabled", "");
            }
        });
    </script>
}
