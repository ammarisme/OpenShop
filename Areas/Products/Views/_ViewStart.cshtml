@{
    var path = "~/Areas/";
    
    if (User.Identity.IsAuthenticated)
    {
        path = path + "Accounts";
    }
    
    if (!User.Identity.IsAuthenticated)
    {
        path = path + "Default";
    }
    if (Request.Headers["X-PJAX"] != null)
    {
        path = path + "/Views/Shared/_PjaxLayout.cshtml";
    }
    else
    {
        path = path+ "/Views/Shared/_Layout.cshtml";        
    }

    Layout = path;
}
