<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">


@if (IsSectionDefined("head"))
{
    @RenderSection("head");
}
else
{
    @Html.Partial("retail_default_head");
}

<body class="container">
        
    <!-- The Navigation Bar -->
    @if (IsSectionDefined("navbar"))
    {
        RenderSection("navbar");
    }
    else
    {
        @Html.Partial("retail_default_navbar");
    }

    @* Modals *@
    @if (IsSectionDefined("modals"))
    {
        RenderSection("modals");
    }
    else
    {
        @Html.Partial("retail_default_modals");
    }
    
    <div class="content-panel">
        @if (IsSectionDefined("retail_default_sidebar"))
        {
            RenderSection("retail_default_sidebar");
        }
        else
        {
            @Html.Partial("retail_default_sidebar");
        }
        <!-- Body -->
        <div class="right" style="width: 80%">
            <div class="showLeft" style="padding-left: 10px; padding-right:10px;">
                <div><i class="material-icons side-bar-toggle">menu</i></div>
                @RenderBody()
            </div>
        </div>
    </div>
    <!-- Footer -->
    @if (IsSectionDefined("footer"))
    {
        @RenderSection("footer", false);
    }
    else
    {
        @Html.Partial("retail_default_footer");
    }


    @if (IsSectionDefined("external_scripts"))
    {
        @RenderSection("external_scripts");
    }
    else
    {
        @Html.Partial("retail_default_external_scripts");
    }

    @if (IsSectionDefined("required_scripts"))
    {
        @RenderSection("required_script");
    }
    else
    {
        @Html.Partial("retail_required_script");
    }


    @if (IsSectionDefined("script"))
    {
        @RenderSection("script");
    }
    else
    {
        @Html.Partial("retail_default_script");
    }
    @Html.Partial("inter_view_script");
</body>
</html>
