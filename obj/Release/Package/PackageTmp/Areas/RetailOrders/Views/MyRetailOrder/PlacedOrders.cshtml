@using ETrading.Areas.RetailOrders.Models
@model PlacedOrdersView
    @{
        ViewBag.title = "My Orders";
    }

    <h5>@ViewBag.title</h5>

    <div class="panel well">
        <table id="orders-table" class="table table-striped table-hover" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>OrderId</th>
                    <th>OrderDate</th>
                    <th>OrderDueDate</th>
                    <th>OrderStatus</th>
                    <th>DeliveredDate</th>
                    <th>DeliveryStatus</th>
                    <th>Remark</th>
                    <th>CustomerId</th>
                    <th>RetailerId</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.RetailOrders)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.OrderDate</td>
                        <td>@order.OrderDueDate</td>
                        <td>@order.OrderStatus</td>
                        <td>@order.DeliveredDate</td>
                        <td>@order.DeliveryStatus</td>
                        <td>@order.Remark</td>
                        <td>@order.CustomerId</td>
                        <td>@order.RetailerId</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="panel well">
        <table id="products-in-order-table" class="table table-striped table-hover" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>ProductInRetailOrderId</th>
                    <th>ProductId</th>
                    <th>RetailOrderId</th>
                    <th>Quantity</th>
                    <th>UnitPrice</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>


    @section script{
        <script src="~/Scripts/jquery.dataTables.js"></script>
        <script>

            // Products in order table DataTable initiation
            var productsInOrderTable = initiateTable1(
                "products-in-order-table",
                {
                    "bFilter": false,
                    "bInfo": false,
                    "columns": [
                    { "data": "ProductInRetailOrderId" },
                    { "data": "ProductId" },
                    { "data": "RetailOrderId" },
                    { "data": "Quantity" },
                    { "data": "UnitPrice" },
                    { "data": "Description" }
                    ]
                }, function () { }
                , function () { }
                );


            // Order table DataTable initiation
            // on Order table row selection, the product in order table must update related products
            var onOrderSelection = function () {
                var id = getTableSelectedRowKey($("#orders-table"));

                updateTable(productsInOrderTable, "../../api/RetailOrders/GetProductsInRetailOrder/" + id);
            }

            var onOrderUnselection = function () {
                productsInOrderTable.clear().draw();
            }
            var ordersTable = initiateTable1(
                "orders-table",
                {
                    "bFilter": false,
                    "bInfo": false,
                    "columns": [
                            { "data": "OrderId" },
                            { "data": "OrderDate" },
                            { "data": "OrderDueDate" },
                            { "data": "OrderStatus" },
                            { "data": "DeliveredDate" },
                            { "data": "DeliveryStatus" },
                            { "data": "Remark" },
                            { "data": "CustomerId" },
                            { "data": "RetailerId" }
                    ]
                }, onOrderSelection
                 , onOrderUnselection
                );
        </script>
    }
