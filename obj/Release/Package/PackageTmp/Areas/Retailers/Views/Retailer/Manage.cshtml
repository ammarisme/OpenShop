@using ETrading.Areas.Retailers.Models

@model ManageRetailerViewModel
@{
    ViewBag.Title = "View profile";
}

<title>Manage Store Profile</title>
<h5>@Model.RetailerName</h5>

@* User Creation Form *@
<div class="well">
    <form action="Edit" id="wholesaler-form" method="POST">
        @Html.TextBoxFor(m => m.Id, new { @class = "form-control hidden" })

        <div id="name-group" class="form-group">
            <label for="name">Email</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div id="name-group" class="form-group">
            <label for="name">RetailerName</label>
            @Html.TextBoxFor(m => m.RetailerName, new { @class = "form-control" })
        </div>
        <div id="name-group" class="form-group">
            <label for="name">RetailerAddress</label>
            @Html.TextBoxFor(m => m.RetailerAddress, new { @class = "form-control" })
        </div>
        <div id="name-group" class="form-group">
            <label for="name">BusinessPhoneNumber</label>
            @Html.TextBoxFor(m => m.BusinessPhoneNumber, new { @class = "form-control" })
        </div>
        <div id="name-group" class="form-group hidden">
            <label for="name">Status</label>
            @Html.TextBoxFor(m => m.Status, new { @class = "form-control" })
        </div>
        <div id="name-group" class="form-group">
            <label for="name">BRCNumber</label>
            @Html.TextBoxFor(m => m.BRCNumber, new { @class = "form-control" })
        </div>
        <div id="name-group" class="form-group">
            <label for="name">Category</label>
            @Html.TextBoxFor(m => m.Category, new { @class = "form-control" })
        </div>
        <div id="name-group" class="form-group">
            <label for="name">Rating</label>
            @Html.TextBoxFor(m => m.Rating, new { @class = "form-control" })
        </div>
        <input type="submit" class="btn btn-primary btn-raised" value="Edit Profile" />
    </form>
</div>

