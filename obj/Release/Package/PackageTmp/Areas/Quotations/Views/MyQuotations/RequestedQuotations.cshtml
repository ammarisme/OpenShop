@using ETrading.Models
@using ETrading.Areas.Quotations.Models

@model RequestedQuotationsViewModel
@{
}

@{
    ViewBag.title = "Requested Quotations";
}

<h5>@ViewBag.title</h5>
<ul class="nav nav-tabs" style="margin-bottom: 15px;">
    <li class="active"><a href="#all-quotations" data-toggle="tab">All Quotations</a></li>
    <li class=""><a href="#individual-quotation" data-toggle="tab">Individual Quotation</a></li>
</ul>
<div id="myTabContent" class="tab-content">
    <div class="tab-pane fade in active" id="all-quotations">
        <div class="row">
            <h5>All Quotations</h5>
            <table id="requested-quotations" class=" table table-striped table-hover well" cellspacing="0">
                <thead>
                    <tr>
                        <th>QuotationId</th>
                        <th>WholesalerId</th>
                        <th>DeliveryMethod</th>
                        <th>PaymentMethod</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var quotation in Model.RequestedQuotations)
                    {
                        <tr>
                            <td>@quotation.QuotationId</td>
                            <td>@quotation.WholesalerId</td>
                            <td>@quotation.DeliveryMethod</td>
                            <td>@quotation.PaymentMethod</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="tab-pane fade in" id="individual-quotation">
        <div class="row">
            <h5>Please choose a Quotation from other tab to view.</h5>
        </div>
    </div>
</div>
