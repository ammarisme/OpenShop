@* The logo *@
<a href="/" class="logo">
    @*mini logo 50x50*@
    <span class="logo-mini"><b>ET</b></span>
    @* Large logo *@
    <span class="logo-lg"><b>Eco</b> Trading</span>
</a>
<!-- Header Navbar -->
<nav class="navbar navbar-static-top"> @* <nav class="navbar navbar-static-top" role="navigation"> *@
@if (@Request.IsAuthenticated){
    <button id="refresh-button" class="btn btn-warning">Refresh</button>
    }
    <!-- Navbar Right Menu -->
    <div> @* <div class="navbar-custom-menu"> *@
    @if (@Request.IsAuthenticated){
        <ul class="nav navbar-nav">
            <!-- Messages Menu -->
            <li class="dropdown messages-menu">
                @* Menu toggle button *@
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <i class="fa fa-envelope-o"></i>
                    <span class="label label-success">X</span>
                </a>
            </li>
            
            <!-- Notifications Menu -->
            <li class="dropdown notifications-menu">
                @* Notifications toggle button *@
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <i class="fa fa-bell-o"></i>
                    <span class="label label-warning">Y1</span>
                </a>
            </li>
            
            <!-- Tasks Menu -->
            <li class="dropdown tasks-menu">
            @* toggle button *@
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <i class="fa fa-flag-o"></i>
                    <span class="label label-danger">9</span>
                </a>
            </li>

            <!-- User Account Menu -->
            <li class="dropdown user user-menu">
                <!-- Menu Toggle Button -->
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <!-- The user image in the navbar-->
                    <img src="~/Content/adminlte_images/managing-director.jpg" class="user-image" alt="User Image">
                    <!-- hidden-xs hides the username on small devices so only the image appears. -->
                    <span class="hidden-xs">UserName</span>
                </a>
                <ul class="dropdown-menu">
                    @* Menu header*@
                    <li class="user-header">
                        <img src="~/Content/adminlte_images/user2-160x160.jpg" class="img-circle" alt="User Image">
                        <p>
                            FirstName Last Name
                            <small>a really cool guy</small>
                        </p>
                    </li>
                    @* Menu body *@
                    <li class="user-body">
                        <div class="row">
                            <div class="col-xs-4 text-center">
                                <a href="#">Customers</a>
                            </div>
                            <div class="col-xs-4 text-center">
                                <a href="#">My Sales</a>
                            </div>
                            <div class="col-xs-4 text-center">
                                <a href="#">Total Orders</a>
                            </div>
                        </div>
                    </li>
                    @* Menu footer *@
                    <li class="user-footer">
                        <div class="pull-left">
                            <a href="#" class="btn btn-default btn-flat">Profile</a>
                        </div>
                        <div class="pull-right">
                            <a href="~/Account/Logoff" class="btn btn-default btn-flat">Sign out</a>
                        </div>
                    </li>
                </ul>
            </li>
            
        </ul>
        }
        @Html.Partial("_LoginPartial")
    </div>
</nav>
