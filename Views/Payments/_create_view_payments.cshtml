<div class="col-md-12">
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog" data-backdrop="false">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">Close</button>
                    <h4 class="modal-title"></h4>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
                </div>
            </div>

        </div>
    </div>
</div>
@* Payment Creation Form *@
<div class="col-md-6 col-sm-12">
    <form action="/api/Payments/AddPayment" id="payment-form" method="POST">
        <div id="name-group" class="form-group">
                        @*
                autogenerated :
                PaymentId
                        *@

            @*Amount*@
            <label for="date">Amount</label>
            <input type="number" pattern="[0-9.]+" name="Amount" class="form-control" />

            @*IssuedDate*@
            <label for="date">IssuedDate</label>
            <input type="date" name="IssuedDate" class="form-control" />

            @*RealizationDate*@
            <label for="date">RealizationDate</label>
            <input type="date" name="RealizationDate" class="form-control" />

            @*Remark*@
            <label for="name">Remark</label>
            <input type="text" name="Remark" class="form-control" />

            @*PurchaseOrderId*@
            <label for="name">PurchaseOrderId</label>
            @Html.DropDownList("PurchaseOrderId", new SelectList(ViewBag.purchaseOrders, "PurchaseOrderId", "PurchaseOrderId"), htmlAttributes: new { @class = "form-control", id = "PurchaseOrderId" })
            
            @*PaymentMode*@
            <label for="name">PaymentMode</label>
            @Html.DropDownList("PaymentModeId", new SelectList(ViewBag.paymentModes, "PaymentModeName", "PaymentModeName"), htmlAttributes: new { @class = "form-control", id = "PaymentMode" })

            @*Status*@
            <label for="name">Status</label>
            @Html.DropDownList("PaymentStatusId", new SelectList(ViewBag.paymentStatuses, "PaymentStatusName", "PaymentStatusName"), htmlAttributes: new { @class = "form-control", id = "Status" })
        </div>
    </form>
    <button class="btn btn-success" id="create-payment-button">Create Payment</button>
</div>

@* show the payment list from the database *@
<div class="col-md-12 col-sm-12">
    <table id="payments-table" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Amount</th>
                <th>IssuedDate</th>
                <th>RealizationDate</th>
                <th>PaymentMode</th>
                <th>PurchaseOrderId</th>
                <th>Status</th>
                <th>Remark</th>
            </tr>
        </thead>
        <tbody></tbody>
        <tfoot>
            <tr>
                <th>Amount</th>
                <th>IssuedDate</th>
                <th>RealizationDate</th>
                <th>PaymentMode</th>
                <th>PurchaseOrderId</th>
                <th>Status</th>
                <th>Remark</th>
            </tr>
        </tfoot>
    </table>
</div>


<script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
<script>
    viewControllerRoute = "../Payments/CreateViewPayments"; // where the user is in

    /// Initiating the payments table

    var paymentsTable = $("#payments-table").DataTable({
        "columns": [
                { "data": "Amount" },
                { "data": "IssuedDate" },
                { "data": "RealizationDate" },
                { "data": "PaymentMode" },
                { "data": "PurchaseOrderId" },
                { "data": "Status" },
                { "data": "Remark" }
        ]
    }); 

    var paymentForm = $("#payment-form");

    updateTableFromApi(paymentsTable, "/api/Payments/GetPayments", function (){});

    $("#create-payment-button").on('click', function () {
        var FormData = getFormValues('payment-form');
        $.ajax({
            type: 'post',
            url: "/api/Payments/AddPayment",
            data: JSON.stringify(FormData),
            dataType: 'json',
            contentType: 'application/json',
            success: function (data) {
                paymentsTable.clear();
                updateTableFromApi(paymentsTable, "/api/Payments/GetPayments", function () { });
            }
        }
            );
    });

</script>
