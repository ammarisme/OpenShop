<div class="col-md-12">
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog" data-backdrop="false">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">Close</button>
                    <h4 class="modal-title"></h4>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
                </div>
            </div>

        </div>
    </div>
</div>
@* Customer Creation Form *@
<div class="col-md-6 col-sm-12">
    <form action="/api/Customers/AddCustomer" id="customer-form" method="POST">
        <div id="name-group" class="form-group">
                                                @*
                                                autogenerated :
        CustomerId
        CustomerFullName
        Status
                                                *@

            @*FirstName*@
            <label for="date">FirstName</label>
            <input type="text" name="FirstName" class="form-control" />

            @*LastName*@
            <label for="date">LastName</label>
            <input type="text" name="LastName" class="form-control" />

            @*PhoneNumber*@
            <label for="date">PhoneNumber</label>
            <input type="number" pattern="[0-9+]" name="PhoneNumber" class="form-control" />
            
            @*Remark*@
            <label for="date">Remark</label>
            <input type="text" name="Remark" class="form-control" />

            @*BillingAddress*@
            <label for="date">BillingAddress</label>
            <input type="text" name="BillingAddress" class="form-control" />

        </div>
    </form>
    <button class="btn btn-success" id="create-update-customer-button">Create / Update Customer</button>
</div>

@* show the customer list from the database *@
<div class="col-md-12 col-sm-12">
    <table id="customers-table" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>CustomerId</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Status</th>
                <th>BillingAddress</th>
                <th>PhoneNumber</th>
                <th>Remark</th>
                <th>CustomerFullName</th>
            </tr>
        </thead>
        <tbody></tbody>
        <tfoot>
            <tr>
                <th>CustomerId</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Status</th>
                <th>BillingAddress</th>
                <th>PhoneNumber</th>
                <th>Remark</th>
                <th>CustomerFullName</th>
            </tr>
        </tfoot>
    </table>
</div>


<script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
<script>
    viewControllerRoute = "../Customers/ViewEditCustomers"; // where the user is in

    /// Initiating the customers table

    var customersTable = $("#customers-table").DataTable({
        "columns": [
                { "data": "CustomerId" },
                { "data": "FirstName" },
                { "data": "LastName" },
                { "data": "Status" },
                { "data": "BillingAddress" },
                { "data": "PhoneNumber" },
                { "data": "Remark" },
                { "data": "CustomerFullName" }
        ]
    }); //

    var customerId = null;
    var customerForm = $("#customer-form");

    var onCustomerSelected = function () {
        var tableIndex = getTableSelectedRowIndex($("#customers-table"));

        var customerData = customersTable.row(tableIndex).data();

        setFormValues(customerForm, customerData);

        customerId = getTableSelectedRowKey($("#customers-table"));
    }
    updateTableFromApi(customersTable, "/api/Customers/GetCustomers", onCustomerSelected);

    $("#create-update-customer-button").on('click', function () {
        var FormData = getFormValues('customer-form');
        FormData.CustomerId = customerId; // this column will say if this customer already  exist in db or not
        $.ajax({
            type: 'post',
            url: "/api/Customers/AddOrUpdateCustomer",
            data: JSON.stringify(FormData),
            dataType: 'json',
            contentType: 'application/json',
            success: function (data) {
                customersTable.clear();
                updateTableFromApi(customersTable, "/api/Customers/GetCustomers", onCustomerSelected);
            }
        }
            );
    });

</script>
