<div class="col-md-12">
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog" data-backdrop="false">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">Close</button>
                    <h4 class="modal-title"></h4>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
                </div>
            </div>

        </div>
    </div>
</div>
@* Vendors Creation Form *@
<div class="col-md-6 col-sm-12">
    <form action="/api/Vendors/AddVendor" id="vendor-form" method="POST">
        <div id="name-group" class="form-group">
            @*
                autogenerated :
                    VendorId
                    Status
            *@

            @*Name*@
            <label for="date">Company Name</label>
            <input type="text" name="Name" class="form-control" />

            @*Address*@
            <label for="date">Address</label>
            <input type="text" name="Address"  class="form-control" />

            @*Telephone*@
            <label for="date">Telephone</label>
            <input type="text" pattern="[0-9+]+" name="Telephone" class="form-control" />

            @*ContactPerson*@
            <label for="date">ContactPerson</label>
            <input type="text" name="ContactPerson" class="form-control" />

            @*Remark*@
            <label for="date">Remark</label>
            <input type="text" name="Remark" class="form-control" />

            

        </div>
    </form>
    <button class="btn btn-success" id="create-vendor-button">Create / Update Vendor</button>
</div>

@* show the vendor list from the database *@
<div class="col-md-12 col-sm-12">
    <table id="vendors-table" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>VendorId</th>
                <th>Name</th>
                <th>Address</th>
                <th>Telephone</th>
                <th>ContactPerson</th>
                <th>Remark</th>
            </tr>
        </thead>
        <tbody></tbody>
        <tfoot>
            <tr>
                <th>VendorId</th>
                <th>Name</th>
                <th>Address</th>
                <th>Telephone</th>
                <th>ContactPerson</th>
                <th>Remark</th>
            </tr>
        </tfoot>
    </table>
</div>


<script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
<script>
    viewControllerRoute = "../Material/ViewEditVendors"; // where the user is in

    /// Initiating the vendors table
    
    var vendorsTable = $("#vendors-table").DataTable({
        "columns": [
                { "data": "VendorId" },
                { "data": "Name" },
                { "data": "Address" },
                { "data": "Telephone" },
                { "data": "ContactPerson" },
                { "data": "Remark" }
        ]
    }); //

    var vendorId = null;
    var vendorForm = $("#vendor-form");

    var onVendorSelected = function () {
        var tableIndex = getTableSelectedRowIndex($("#vendors-table"));
        
        var VendorData = vendorsTable.row(tableIndex).data();

        setFormValues(vendorForm, VendorData);

        vendorId = getTableSelectedRowKey($("#vendors-table"));
    }
    updateTableFromApi(vendorsTable, "/api/Vendors/GetVendors", onVendorSelected);
    
    $("#create-vendor-button").on('click', function () {
        var FormData = getFormValues('vendor-form');
        FormData.VendorId = vendorId; // this column will say if this vendor already  exist in db or not
        $.ajax({
            type: 'post',
            url: "/api/Vendors/AddOrUpdateVendor",
            data: JSON.stringify(FormData),
            dataType: 'json',
            contentType: 'application/json',
            success: function (data) {
                vendorsTable.clear();
                updateTableFromApi(vendorsTable, "/api/Vendors/GetVendors", onVendorSelected);
            }
        }
            );
    });
    
</script>